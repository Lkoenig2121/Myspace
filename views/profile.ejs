<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= user.display_name %>'s MySpace Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <% if (profile.custom_css) { %>
    <style>
      <%= profile.custom_css %>
    </style>
    <% } %>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <% if (currentUser) { %>
    <nav class="bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-lg">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between py-4">
          <!-- Logo -->
          <div class="text-2xl font-bold">
            <a href="/" class="hover:text-blue-200 transition">MySpace</a>
          </div>

          <!-- Desktop Navigation (hidden on mobile) -->
          <div class="hidden md:flex items-center space-x-6">
            <a href="/" class="hover:text-blue-200 transition font-semibold">
              <i class="fas fa-home mr-1"></i> Home
            </a>
            <a href="/profile/<%= currentUser.username %>" class="hover:text-blue-200 transition font-semibold">
              <i class="fas fa-user mr-1"></i> My Profile
            </a>
            <a href="/profile/edit" class="hover:text-blue-200 transition font-semibold">
              <i class="fas fa-edit mr-1"></i> Edit Profile
            </a>
            <a href="/auth/logout" class="hover:text-blue-200 transition font-semibold">
              <i class="fas fa-sign-out-alt mr-1"></i> Logout
            </a>
          </div>

          <!-- Desktop User Info (hidden on mobile) -->
          <div class="hidden md:block text-sm">
            Welcome, <strong><%= currentUser.displayName %></strong>!
          </div>

          <!-- Mobile Hamburger Menu Button (visible only on mobile) -->
          <button
            id="mobile-menu-button"
            class="md:hidden text-white focus:outline-none"
            onclick="toggleMobileMenu()"
            aria-label="Toggle menu"
          >
            <i class="fas fa-bars text-2xl"></i>
          </button>
        </div>

        <!-- Mobile Navigation Menu (hidden by default, shown when hamburger is clicked) -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 pt-2">
          <div class="flex flex-col space-y-3">
            <div class="text-sm pb-2 border-b border-blue-400">
              <i class="fas fa-user-circle mr-2"></i>
              Welcome, <strong><%= currentUser.displayName %></strong>!
            </div>
            <a href="/" class="hover:text-blue-200 transition font-semibold py-2 px-2 rounded hover:bg-blue-700">
              <i class="fas fa-home mr-2"></i> Home
            </a>
            <a href="/profile/<%= currentUser.username %>" class="hover:text-blue-200 transition font-semibold py-2 px-2 rounded hover:bg-blue-700">
              <i class="fas fa-user mr-2"></i> My Profile
            </a>
            <a href="/profile/edit" class="hover:text-blue-200 transition font-semibold py-2 px-2 rounded hover:bg-blue-700">
              <i class="fas fa-edit mr-2"></i> Edit Profile
            </a>
            <a href="/auth/logout" class="hover:text-blue-200 transition font-semibold py-2 px-2 rounded hover:bg-blue-700">
              <i class="fas fa-sign-out-alt mr-2"></i> Logout
            </a>
          </div>
        </div>
      </div>
    </nav>

    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        const button = document.getElementById('mobile-menu-button');
        const icon = button.querySelector('i');
        
        menu.classList.toggle('hidden');
        
        // Toggle icon between bars and X
        if (menu.classList.contains('hidden')) {
          icon.classList.remove('fa-times');
          icon.classList.add('fa-bars');
        } else {
          icon.classList.remove('fa-bars');
          icon.classList.add('fa-times');
        }
      }
    </script>
    <% } %>

    <div class="container mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow-xl overflow-hidden">
        <div
          class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 p-8 text-white"
        >
          <h1 class="text-5xl font-bold mb-2"><%= user.display_name %></h1>
          <p class="text-xl text-blue-100 mb-4">@<%= user.username %></p>
          <% if (profile.mood) { %>
          <p class="text-lg mb-2">
            Mood: <span class="font-semibold"><%= profile.mood %></span>
          </p>
          <% } %> <% if (profile.location) { %>
          <p class="text-lg">üìç <%= profile.location %></p>
          <% } %> <% if (isOwnProfile) { %>
          <a
            href="/profile/edit"
            class="inline-block mt-4 bg-white text-blue-600 font-bold py-2 px-6 rounded-lg hover:bg-blue-50 transition"
          >
            Edit Profile
          </a>
          <% } %>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 p-8">
          <div class="lg:col-span-2 space-y-6">
            <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-blue-500">
              <h2 class="text-2xl font-bold text-gray-800 mb-4">About Me</h2>
              <div class="text-gray-700 whitespace-pre-wrap">
                <%= profile.bio || 'No bio yet!' %>
              </div>
            </div>

            <% if (profile.custom_html) { %>
            <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-purple-500">
              <h2 class="text-2xl font-bold text-gray-800 mb-4">
                My Custom Section
              </h2>
              <div class="custom-html"><%- profile.custom_html %></div>
            </div>
            <% } %> <% if (profile.profile_song) { %>
            <div class="bg-gray-50 rounded-lg p-6 border-l-4 border-pink-500">
              <h2 class="text-2xl font-bold text-gray-800 mb-4">
                üéµ My Profile Song
              </h2>
              <p class="text-gray-700 text-lg"><%= profile.profile_song %></p>
            </div>
            <% } %>
          </div>

          <div class="lg:col-span-1">
            <div
              class="bg-gradient-to-br from-blue-50 to-purple-50 rounded-lg p-6 border border-blue-200"
            >
              <h2 class="text-2xl font-bold text-gray-800 mb-4">
                Top 8 Friends
              </h2>
              <% if (top8.length > 0) { %>
              <div class="grid grid-cols-2 gap-3">
                <% top8.forEach(friend => { %>
                <a
                  href="/profile/<%= friend.username %>"
                  class="bg-white rounded-lg p-3 text-center hover:shadow-lg transition-shadow border border-blue-200"
                >
                  <div class="font-semibold text-gray-800 text-sm">
                    <%= friend.display_name %>
                  </div>
                </a>
                <% }) %>
              </div>
              <% } else { %>
              <p class="text-gray-600 text-center py-8">No friends yet!</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
